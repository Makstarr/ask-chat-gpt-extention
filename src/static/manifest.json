{
  "manifest_version": 3,
  "name": "web-extension-chatgpt",
  "description": "ChatGPT web extension",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "ChatGPT web extension",
    "default_icon": "icon.png"
  },
  "permissions": [
    "bookmarks",
    "storage",
    "identity",
    "contextMenus",
    "webRequest"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ]
}
